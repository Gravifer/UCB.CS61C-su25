{
    "tasks": [
        {
            "type": "shell",
            "label": "(Venus) Check calling convention",
            "command": "java",
            "args": [
                "-jar",
                "tools/venus.jar",
                "-cc",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/lab"
            },
            "group": {
                "kind": "test"
            },
            "detail": "Check calling convention for current file",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build"
            },
            "detail": "Task generated by debugger."
        },
        {
            "label": "Build with Makefile",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build using Makefile in current file's directory",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ],
    "version": "2.0.0"
}